/* Ejercicio 5.1.3
Se ingresan 50 números enteros. Determinar el promedio de los números pares.
(Se modifico ejercicio para ingresar solo 10 numeros)
*/

int main(){
    int i, numero, suma, contadorPares;
    suma = 0;
    contadorPares = 0;
    for(i=0; i<10; i++){
        printf("Ingrese un numero (%d): ", i+1);
        scanf("%d", &numero);
        if(numero%2 == 0){
            suma = suma + numero;
            contadorPares++;
        }
    }
    if(contadorPares != 0){
    printf("La suma de numeros pares es de: %d\n", suma);
    printf("La cantidad de numeros pares es de: %d\n", contadorPares);
    printf("El promedio de los numeros pares es de %.2f", suma/(float)contadorPares);
    } else {
        printf("No se ingresaron numeros pares");
  }
